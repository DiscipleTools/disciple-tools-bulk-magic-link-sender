{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["am_ET", "ar", "ar_MA", "bg_BG", "bn_BD", "bs_BA", "cs", "de_DE", "el", "en_US", "es_419", "es_ES", "fa_IR", "fr_FR", "hi_IN", "hr", "hu_HU", "id_ID", "it_IT", "ja", "ko_KR", "mk_MK", "mr", "my_MM", "ne_NP", "nl_NL", "pa_IN", "pl", "pt_BR", "ro_RO", "ru_RU", "sl_SI", "sr_BA", "sw", "th", "tl", "tr_TR", "uk", "vi", "zh_CN", "zh_TW" ],
  "inputFiles": [
    "src/**/*.js"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./src/i18n/generated",
    "localeCodesModule": "./src/i18n/locale-codes.js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}
